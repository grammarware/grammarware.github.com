module Main

exports
 context-free start-symbols program
  sorts
        Program Fun Expression Op 
  context-free syntax
        Fun+ -> Program

        Id Id+ "=" Expression Newline -> Fun

        Expression Op Expression
		| Id Expression+
		| "if" Expression "then" Expression "else" Expression
		| "(" Expression ")"
		| Id
		| Number -> Expression

        "+"
		| "-"
		| "==" -> Op
